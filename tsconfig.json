{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["es2017", "DOM", "WebWorker"],
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  },
  // "ts-node": {
  //   "esm": true,
  //   "experimentalSpecifierResolution": "node"
  // },
  "include": ["src/**/*", "src/app.ts"],
  "exclude": ["node_modules"]
}